{
	"compilerOptions": {
		"module": "commonjs",
		"removeComments": true,
		"preserveConstEnums": true,
		"rootDir": "src",
		"target": "es5", // es3 or es5, any later and it won't run
		"outDir": "src", // JS files are being put as siblings to their TS files already, so I made it explicit
		"lib": [
			"es6"
		],
		"sourceMap": false,
		"strict": false,   /* enable all strict type-checking options */ // Has to be false or it won't run
		"noImplicitAny": false, // Has to be false because the property @instantiable will prevent build
        "noImplicitReturns": true,
        "noUnusedLocals": false,
		"noUnusedParameters": true,
		"resolveJsonModule": true
	},
	"types": [
		"node"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"src/unitTests/"
	]
}
